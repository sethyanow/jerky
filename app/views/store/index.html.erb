      <input type="hidden" name="item[cart_id]" value="<%= @cart.id %>" />
      <button type="submit" class="btn btn-default">Add to order</button>
      <% # f.submit "Add to order", class: "btn btn-default" %>
      <%= link_to "Checkout", checkout_path %>
    </li>
  </ul>
 --></div>
<% end %>


