<h1>JERKY <small>get your jerky right here</small></h1>

<% unless @order.items.length == 0 then %>
  <div class="well">
    <%= @order.items.each do |item| %>
      <%= item %>
    <% end %>
  </div>
<% end %>
<!--
<form class="form-inline" role="form"> -->
<%= form_for @order, class: "form-inline" do |f| %>
  <div class="form-group">
    <label class="sr-only" for="exampleInputEmail2">Flavor</label>
    <div class="input-group">
      <div class="input-group-addon">Flavor:</div>
      <%= collection_select(:item, :flavor_id, Flavor.all, :id, :name) %>
      <select class="form-control" name="flavor_id">
        <%= @flavors.each do |flavor| %>
          <option value=<%= flavor.id %>><%= flavor.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="sr-only" for="exampleInputEmail2">Type</label>
    <div class="input-group">
      <div class="input-group-addon">Type:</div>
      <%= collection_select(:item, :type_id, Type.all, :id, :name) %>
      <select class="form-control" name="type_id">
        <%= @types.each do |type| %>
          <option value=<%= type.id %>><%= type.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">Quantity:</div>
      <input class="form-control" type="text" name="item[quantity]" placeholder="Enter quantity" value="1">
    </div>
  </div>
  <button type="submit" class="btn btn-default">Add to order</button>
<% end %>
